#!/usr/bin/env bash
# shellcheck disable=SC2086
# shows information about subdomains on passed in information

print_subdomain()
{
    domain="$1"
    subdomain="$2"
    printf "The subdomain %s is a " "$2"
    dig "$subdomain.$domain" | grep -A1 'ANSWER SECTION:' | awk ' ' '{printf $4}'
    printf " record and points to "
    dig "$subdomain.$domain" | grep -A1 'ANSWER SECTION:' | awk ' ' '{printf $5}'
}

for each in "www" "lb-01" "web-01" "web-02"
do
    if [ -z "$2" ] || [ "$2" == "$each" ];
    then
	print_subdomain "$1" "$each"
    fi
done
else
    print_subdomain "$1" "$2"
